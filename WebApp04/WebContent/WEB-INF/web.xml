<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>WebApp04</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>Test004</servlet-name>  				<!-- 3 -->
		<servlet-class>com.test.Test004</servlet-class>		<!-- 4 -->
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Test004</servlet-name>				<!-- 2 -->
		<url-pattern>/test004</url-pattern>					<!-- 1 -->
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>Test005</servlet-name>				<!-- 서블릿 이름. 아무거나 해도 됨(ex. 초코) -->
		<servlet-class>com.test.Test005</servlet-class>		<!-- 여기로 가라! -->
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Test005</servlet-name>			<!-- Test005라는 서블릿을 찾아라 -->
		<url-pattern>/login</url-pattern>				<!-- /login이 일어나면 -->
	</servlet-mapping>
</web-app>